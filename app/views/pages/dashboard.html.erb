<div class="container margin-top-negative">
<div class="text-center">    <h1>MY DASHBOARD</h1></div>

<h2>My requests:</h2>
  <p>
   <div class="row d-flex">
    <% @my_bookings.each do |booking| %>
     <div class="col-md-4">
      <div class="cruise-card">
          <div class="cruise-card-content">
            <div class="cruise-card-title">
              <h4><%= Cruise.find(booking.cruise_id).title %></h4>

                  <p>Skipper: <%= User.find(Cruise.find(booking.cruise_id).owner_id).first_name %> 👩‍✈️</p>
                  <p>🌎 ⛵️<%= Cruise.find(booking.cruise_id).itinerary %></p>
                  <!-- <li>My message to  <strong><%= User.find(Cruise.find(booking.cruise_id).owner_id).first_name%></strong>: <%= booking.user_description %></li> -->
                  <p>For <strong><%= booking.number_of_passengers%></strong> passengers</p>
                  <p>Boat capacity <strong><%= Cruise.find(booking.cruise_id).capacity%></strong> passengers</p>
                  <p>Booking status: <%= booking.status %></p>
                  <%= link_to "Send a message to #{User.find(Cruise.find(booking.cruise_id).owner_id).first_name}", edit_booking_path(booking) %>
                  <%= button_to "I don't want to go anymore", booking, method: :delete, class: "btn btn-secondary"%>

            </div>
          </div>
      </div>
      </div>
    <% end %>
    </div>
  </p>

<h2>Cruises requests from users</h2>

 <p>
    <% @bookings_requests.each do |request| %>
    <p>My cruise: <%= Cruise.find(request.cruise_id).title %></p>
    <p>Booking ID: <%= request.id %></p>
      <ul>
        <li><strong><%= User.find(request.customer_id).first_name %></strong> wants to join the cruise!</li>
        <li>Here is her message: <%= request.user_description %> </li>
        <li>Booking status: <%= request.status %></li>
      </ul>
      <%= link_to "Accept this booking", pages_accept_booking_path(request), class: 'btn btn-primary'  %>
      <%= link_to "Refuse this booking", pages_refuse_booking_path(request), class: 'btn btn-primary' %>
      <%= link_to "See details", booking_path(request) %>
    <% end %>
  </p>

</div>
